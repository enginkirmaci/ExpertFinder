<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/assets/fonts/font-awesome.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.css">
    <link rel="stylesheet" href="~/assets/css/dropzone.css">
    <link rel="stylesheet" href="~/assets/css/jquery.ui.timepicker.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/user.style.css">
    <link rel="stylesheet" href="~/assets/css/colors/green.css" />

    <title>@(ViewBag.Title == null ? "Usta Evi" : string.Format("{0} - Usta Evi", ViewBag.Title))</title>
</head>

<body onunload="" class="page-subpage page-submit navigation-off-canvas" id="page-top">
    <!-- Outer Wrapper-->
    <div id="outer-wrapper">
        <!-- Inner Wrapper -->
        <div id="inner-wrapper">
            @await Component.InvokeAsync("Header")

            <div id="page-canvas">
                <div id="page-content">
                    @RenderBody()
                </div>
            </div>

            @await Component.InvokeAsync("Footer")

            @if (ViewBag.Transaction != null)
            {
                @await Component.InvokeAsync("Modal", new { Transaction = ViewBag.Transaction })
            }
        </div>

        <!-- end Inner Wrapper -->
    </div>
    <!-- end Outer Wrapper-->

    <environment names="Development">
        <script src="~/assets/js/jquery-2.1.0.min.js"></script>
        <script src="~/assets/js/before.load.js"></script>
        <script src="~/assets/js/jquery-ui.min.js"></script>
        <script src="http://maps.google.com/maps/api/js?sensor=false&amp;libraries=places"></script>
        <script src="~/assets/js/richmarker-compiled.js"></script>
        <script src="~/assets/js/jquery-migrate-1.2.1.min.js"></script>
        <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/assets/js/smoothscroll.js"></script>
        <script src="~/assets/js/bootstrap-select.min.js"></script>
        <script src="~/assets/js/icheck.min.js"></script>
        <script src="~/assets/js/jquery.hotkeys.js"></script>
        <script src="~/assets/js/dropzone.min.js"></script>
        <script src="~/assets/js/jquery.ui.timepicker.js"></script>
        <script src="~/assets/js/custom.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
